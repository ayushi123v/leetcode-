

class Solution {
    public int maximumProduct(int[] nums) {
        Arrays.sort(nums);
        int n = nums.length;
        
        // Max of: last 3 numbers OR 2 smallest (negatives) * largest
        return Math.max(nums[n-1] * nums[n-2] * nums[n-3],
                        nums[0] * nums[1] * nums[n-1]);
    }
}
