class Solution {
    public long maximumMedianSum(int[] nums) {
        if(nums.length == 1) return nums[0];
        if(nums.length == 2) return (nums[0]+nums[1])/2;
        Arrays.sort(nums);
        long res = 0;
        int i=0;int j = nums.length-2;
        while(i<j){
            res += nums[j];
            j -= 2;
            i++;
        }

        return res;
    }
}
