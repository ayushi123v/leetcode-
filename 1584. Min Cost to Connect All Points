class Solution {

    class Pair {
        int dist;
        int node;
        Pair(int dist, int node) {
            this.dist = dist;
            this.node = node;
        }
    }

    public int minCostConnectPoints(int[][] points) {
        int n = points.length;
        int[] vis = new int[n];

        PriorityQueue<Pair> pq = new PriorityQueue<>((a, b) -> a.dist - b.dist);

        pq.add(new Pair(0, 0));  // (weight, node)
        int totalCost = 0;

        while (!pq.isEmpty()) {
            Pair p = pq.poll();
            int wt = p.dist;
            int node = p.node;

            if (vis[node] == 1) continue;

            vis[node] = 1;
            totalCost += wt;

            for (int next = 0; next < n; next++) {
                if (vis[next] == 0) {
                    int distance = Math.abs(points[node][0] - points[next][0]) +
                                   Math.abs(points[node][1] - points[next][1]);

                    pq.add(new Pair(distance, next));
                }
            }
        }

        return totalCost;
    }
}
