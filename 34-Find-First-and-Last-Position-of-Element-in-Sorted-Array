class Solution {
    public int[] searchRange(int[] nums, int target) {
        int n = nums.length;
        int first = -1;
        int last = -1;

        // Find the first occurrence
        for (int i = 0; i < n; i++) {
            if (nums[i] == target) {
                first = i;
                break;  // stop when first occurrence found
            }
        }

        // If found, find the last occurrence
        if (first != -1) {
            for (int j = first; j < n; j++) {
                if (nums[j] == target) {
                    last = j; // keep updating last
                }
            }
        }

        return new int[]{first, last};
    }
}
